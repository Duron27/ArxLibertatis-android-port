<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen_controls_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.arxlibertatis.ui.controls.views.TouchCamera
        android:id="@+id/touchCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/buttons_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOpacityPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickOpacityPlus"
                android:text="@string/btn_opacityPlus" />

            <Button
                android:id="@+id/btnOpacityMinus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickOpacityMinus"
                android:text="@string/btn_opacityMinus" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSizePlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickSizePlus"
                android:text="@string/btn_sizePlus" />

            <Button
                android:id="@+id/btnSizeMinus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickSizeMinus"
                android:text="@string/btn_sizeMinus" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickResetControls"
            android:text="@string/btn_resetControlsLayout" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickBack"
            android:text="@string/btn_back" />
    </LinearLayout>

    <com.arxlibertatis.ui.controls.views.MouseSDLImageButton
        android:id="@+id/attack_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/attack" />

    <com.arxlibertatis.ui.controls.views.SDLImageButton
        android:id="@+id/sneak_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/sneak" />

    <com.arxlibertatis.ui.controls.views.SDLImageButton
        android:id="@+id/pause_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/pause" />

    <com.arxlibertatis.ui.controls.views.MouseSDLImageButton
        android:id="@+id/inventory_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/inventory" />

    <com.arxlibertatis.ui.controls.views.SDLImageButton
        android:id="@+id/quick_save_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/save" />

    <com.arxlibertatis.ui.controls.views.SDLImageButton
        android:id="@+id/quick_load_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/load" />

    <com.arxlibertatis.ui.controls.views.ToggleSdlImageButton
        android:id="@+id/toggle_magic_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/toggle_magic" />

    <com.arxlibertatis.ui.controls.views.SDLImageButton
        android:id="@+id/toggle_weapon_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/toggle_weapon" />

    <com.arxlibertatis.ui.controls.views.SDLImageButton
        android:id="@+id/jump_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/jump" />

    <com.arxlibertatis.ui.controls.views.SDLImageButton
        android:id="@+id/use_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/use_down" />

    <com.arxlibertatis.ui.controls.views.ToggleSdlImageButton
        android:id="@+id/walk_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/run" />

    <com.arxlibertatis.ui.controls.views.ToggleMouseSDLButton
        android:id="@+id/toggle_use_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_gravity="right"
        android:src="@drawable/use" />

    <com.arxlibertatis.ui.controls.views.JoyStick
        android:id="@+id/joystick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|left" />
</FrameLayout>